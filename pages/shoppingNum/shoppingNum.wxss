/*全局样式  */
page{
  padding:20px 0;
}
/*主容器  */
.stepper{
  width:80px;
  height:25px;
  border:1px solid #ccc;
  border-radius:3px;
  margin:20px auto;
}
/*加减号  */
.stepper text{
  float:left;
  width:19px;
  text-align:center;
  line-height:25px;
}
/*数字  */
.stepper input{
  float:left;
  width:40px;
  border-left:1px solid #ccc;
  border-right:1px solid #ccc;
}